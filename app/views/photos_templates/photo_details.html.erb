<h1>Photo Details</h1>

<dl>
  <dt>Image</dt>
  <dd><img src="<%= @matching_photo.image %>"></dd>

  <dt>Caption</dt>
  <dd><%= @matching_photo.caption %></dd>

  <dt>Owner</dt>
  <dd><%= @matching_photo.poster.username %></dd>

  <dt>Posted</dt>
  <dd><%= @matching_photo.created_at %></dd>

  <dt>Edit photo</dt>
  <dd>
    <form action="/edit_photo/<%= @matching_photo.id %>">
      <label for="img_url">Image</label>
      <input id="img_url" name="img_url" placeholder="Enter a URL for the image..." value="<%= @matching_photo.image %>">
      <label for="caption">Caption</label>
      <textarea id="caption" name="caption" placeholder="Enter a caption for the photo..."><%= @matching_photo.caption %></textarea>
      <button>Update photo</button>
    </form>
  </dd>

  <dt>Delete photo</dt>
  <dd><a href="/delete_photo/<%= @matching_photo.id %>">Delete this photo</a></dd>
</dl>

<h2>Comments</h2>

<table border="0">
  <tr>
    <th>Commenter</th>
    <th>Comment</th>
    <th>Posted</th>
  </tr>

  <% @matching_photo.comments.each do |each_comment| %>

  <tr>
    <td><%= each_comment.commenter.username %></td>
    <td><%= each_comment.body %></td>
    <td><%= each_comment.created_at %></td>
  </tr>

  <% end %>

</table>

<h3>Add a new comment</h3>

<form action="/add_comment">
  <label for="photo_id">Photo ID</label>
  <input id="photo_id" name="photo_id" value="<%= @matching_photo.id %>">
  <label for="author_id">Author ID</label>
  <input id="author_id" name="author_id">
  <label for="comment">Comment</label>
  <textarea id="comment" name="comment" placeholder="Enter a comment..."></textarea>
  <button>Add comment</button>
</form>
